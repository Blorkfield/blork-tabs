{
  "name": "@blorkfield/blork-tabs",
  "version": "0.1.3",
  "description": "A framework-agnostic tab/panel management system with snapping and docking",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean && cp styles.css dist/",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "tabs",
    "panels",
    "docking",
    "snapping",
    "ui",
    "drag-and-drop",
    "window-management"
  ],
  "author": "Blorkfield",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/blorkfield/blork-tabs.git"
  },
  "bugs": {
    "url": "https://github.com/blorkfield/blork-tabs/issues"
  },
  "homepage": "https://github.com/blorkfield/blork-tabs#readme",
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "happy-dom": "^20.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
